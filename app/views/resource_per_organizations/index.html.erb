<div class="col-12 mb-4">
  <div class="card border-0 shadow components-section">
    <div class="card-header bg-white border-0 pb-0">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
        <h2 class="h4 m-0">Recursos - <%= @organization&.name %></h2>
        <%= link_to "Agregar Recurso", new_organization_resource_per_organization_path(@organization), class: 'btn btn-gray-800 mt-2 animate-up-2' if can? :create, ResourcePerOrganization %>
      </div>
    </div>
    <div class="card-body pt-0 pb-4">
      <div class="table-responsive">
        <table class="table table-centered table-nowrap mb-0 rounded">
          <thead class="thead-light">
          <tr>
            <th class="border-0 rounded-start"></th>
            <th class="border-0">Nombre</th>
            <th class="border-0">Cantidad</th>
            <th class="border-0 rounded-end"></th>
          </tr>
          </thead>
          <tbody>
          <%= render 'table', resources: @resource_per_organizations %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
