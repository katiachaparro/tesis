<% @user_permissions.each do |up| %>
  <tr>
    <td class="text-start col-4">
      <div class="d-flex flex-column">
        <span><%= up.user.full_name %></span>
        <span><%= "(#{up.user.email})" %></span>
      </div>
    </td>
    <td class="text-start d-none d-md-table-cell"><%= up.role_text %></td>
    <td class="text-start d-none d-md-table-cell"><%= up.organization.name %></td>
    <td class="text-end">
      <%= link_to edit_user_permission_path(up), class: 'text-info me-1 my-0 fs-5', title: 'Editar' do %>
        <span class= "fa fa-pen-to-square"></span>
      <% end if can? :edit, up %>
    </td>
  </tr>
<% end %>