<div class="toast-container position-absolute end-0 pt-5" style="z-index:200">
  <% if notice.present? %>
    <div class="toast align-items-center border-1 border-success text-success" role="alert" aria-live="assertive" aria-atomic="true" data-controller="flash">
      <div class="d-flex">
        <div class="toast-body"><%= notice %></div>
        <button type="button" class="btn-close btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  <% end %>
  <% if alert.present? %>
    <div class="toast align-items-center border-1 border-danger text-danger" role="alert" aria-live="assertive" aria-atomic="true" data-controller="flash">
      <div class="d-flex">
        <div class="toast-body"><%= alert %></div>
        <button type="button" class="btn-close btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  <% end %>
</div>