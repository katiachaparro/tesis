<%= fields model: @event do |form| %>
  <%= form.fields_for :event_actions, child_index: params[:index] do |action_form| %>
    <%= turbo_frame_tag "event_action_#{action_form.index}" do %>
      <%= action_form.hidden_field :id, value: params[:id] %>
      <%= action_form.hidden_field :_destroy, value: true %>
    <% end %>
  <% end %>
<% end %>