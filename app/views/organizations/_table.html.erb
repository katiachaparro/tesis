<% organizations.each do |organization| %>
  <tr>
    <td class="collapsed <%= organization.child_organizations.any?? '':'disabled' %>" type="button" data-bs-toggle="collapse" data-bs-target="#organization-collapse<%= organization.id %>" aria-expanded="false" aria-controls="#organization-collapse<%= organization.id %>"><i class="fa-solid fa-chevron-down"></i></td>
    <td><%= organization.name %></td>
    <td><%= organization.description %></td>
    <td><%= link_to 'Show', organization %></td>
    <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
  </tr>
  <%= render 'table_collapse', organization: organization if organization.child_organizations.any? %>
<% end %>