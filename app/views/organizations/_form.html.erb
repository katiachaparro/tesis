<%= form_with(model: organization) do |f| %>
  <% if organization.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% organization.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group mb-4">
        <label for="email">Nombre</label>
        <%= f.text_field :name, id: "name", autofocus: true, required: true, class: "form-control" %>
      </div>
      <div class="form-group mb-4">
        <label for="email">Descripci&oacute;n</label>
        <%= f.text_field :description, id: "description", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-gray-800 mt-2 animate-up-2" %>
  </div>
<% end %>

