<div class="col-12 mb-4">
  <div class="card border-0 shadow components-section">
    <div class="card-header bg-white border-0 pb-0">
      <h2 class="h4">Cambiar contrase&ntilde;a</h2>
    </div>
    <div class="card-body pb-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group mb-4">
              <label for="email">Email</label>
              <%= f.email_field :email, id: "email", required: true, class: "form-control", readonly: true %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", autofocus: true, minlength: "#{@minimum_password_length}" %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :current_password %> <i>(necesitamos su contrase√±a actual para confirmar sus cambios)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Cambiar", class: "btn btn-gray-800 mt-2 animate-up-2" %>
          <%= link_to 'Cancelar', :back, class: 'link-secondary ms-3'%>
        </div>
      <% end %>
    </div>
  </div>
</div>