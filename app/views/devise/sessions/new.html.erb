<section class="vh-lg-100 mt-5 mt-lg-0 bg-soft d-flex align-items-center">
  <div class="container">
    <div class="text-center mb-5">
      <%= image_tag 'municipalidad/logo_encarnacion_reporte.png', alt: 'Logo municipalidad', width:'200' %>
    </div>
    <div class="row justify-content-center form-bg-image signin-image">
      <div class="col-12 d-flex align-items-center justify-content-center">
        <div class="bg-white shadow border-0 rounded border-light px-4 px-lg-5 pt-4 w-100 fmxw-500 ">
          <div class="text-center text-md-center mb-4 mt-md-0">
            <%= image_tag 'municipalidad/login_header.png', alt: 'Iniciar sesión', class: 'w-100' %>
          </div>
          <!-- Form email-->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group mb-4">
              <label for="email"><%= f.label :email %></label>
              <div class="input-group">
                  <span class="input-group-text" id="basic-addon1">
                    <svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
                  </span>
                <!--<input type="email" class="form-control" placeholder="example@company.com" id="email" autofocus required>-->
                <%= f.email_field :email, id: "email", autofocus: true, required: true, class: "form-control", placeholder: "ejemplo@empresa.com" %>
              </div>
            </div>
            <!-- End of Form -->
            <div class="form-group mb-4">
              <label for="password"><%= f.label :password %></label>
              <div class="input-group" data-controller="password-toggle">
                  <span class="input-group-text" id="basic-addon2">
                    <svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path></svg>
                  </span>
                <%= f.password_field :password, id: "Password", class: "form-control", placeholder: "Contraseña", required: true, autocomplete: "current-password", data: { password_toggle_target: "input" } %>
                <button class="btn btn-outline-secondary password-toggle" type="button" data-action="click->password-toggle#toggle">
                  <svg class="icon icon-sm" data-password-toggle-target="showIcon" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
                  </svg>
                  <svg class="icon icon-sm d-none" data-password-toggle-target="hideIcon" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-14-14zM3.055 10c1.148-2.81 3.989-5 7.099-5 1.713 0 3.308.522 4.628 1.423l-1.513 1.513a4.013 4.013 0 00-3.115-.936 4 4 0 00-3.45 5.14L5.1 13.69C3.84 12.694 3.033 11.427 3.055 10zm12.184 4.266l-2.067-2.066A4 4 0 0014 10c0-2.222-1.778-4-4-4-.478 0-.934.086-1.355.242L6.5 4.174C7.572 3.684 8.751 3.42 10 3.42c3.95 0 7.47 2.22 8.99 5.58-1.003 2.167-2.616 3.95-4.678 4.976l.927.42z" clip-rule="evenodd"></path>
                    <path d="M4 10.364a4 4 0 115.364-5.364L4 10.364z"></path>
                  </svg>
                </button>
              </div>
            </div>
            <!-- End of Form -->
            <div class="mb-4">
              <div class="text-center">
                <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class:"small text-right"%>
              </div>
            </div>

            <div class="d-grid spinner">
              <%= f.submit "Iniciar sesión" ,class: "btn btn-gray-800"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>