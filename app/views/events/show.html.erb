<div class="col-12 mb-4" xmlns="http://www.w3.org/1999/html">
  <div class="card border-0 shadow components-section">
    <div class="card-header bg-white border-0 pb-0">
      <div class="d-flex justify-content-between">
        <strong class="h5"><%= @event.name %></strong>
        <div><%= @event.event_start.strftime('%d-%m-%Y %H:%M') %></div>
        <div>
          <%= link_to event_export_201_path(@event, format: "pdf"), :class => 'btn btn-secondary d-inline-flex align-items-center', title: '201', target: :_blank do %>
            <span class= "fa fa-file-pdf me-2"></span>
            201
          <% end %>
          <%= link_to event_export_207_path(@event, format: "pdf"), :class => 'btn btn-secondary d-inline-flex align-items-center', title: '201', target: :_blank do %>
            <span class= "fa fa-file-pdf me-2"></span>
            207
          <% end %>
          <%= link_to event_export_211_path(@event, format: "pdf"), :class => 'btn btn-secondary d-inline-flex align-items-center', title: '201', target: :_blank do %>
            <span class= "fa fa-file-pdf me-2"></span>
            211
          <% end %>
        </div>
      </div>
      <%= @event.location %>
    </div>
    <div class="card-body pb-4">
      <div class="row">
        <div class="col-12">
          <!-- Tab -->
          <nav>
            <div class="nav nav-tabs mb-4" id="nav-tab" role="tablist">
              <a class="nav-item nav-link active" id="nav-201-tab" data-bs-toggle="tab" href="#nav-event" role="tab" aria-controls="nav-event" aria-selected="true">201 <span class="d-none d-md-inline">- Resumen del Incidente</span></a>
              <a class="nav-item nav-link" id="nav-201-actions-tab" data-bs-toggle="tab" href="#nav-actions" role="tab" aria-controls="nav-actions" aria-selected="false">201 <span class="d-none d-md-inline">- Resumen de las Acciones</span></a>
              <a class="nav-item nav-link" id="nav-207-tab" data-bs-toggle="tab" href="#nav-victims" role="tab" aria-controls="nav-victims" aria-selected="false">207 <span class="d-none d-md-inline">- Registro de VÃ­ctimas</span></a>
              <a class="nav-item nav-link" id="nav-211-tab" data-bs-toggle="tab" href="#nav-resources" role="tab" aria-controls="nav-resources" aria-selected="false">211 <span class="d-none d-md-inline">- Registro y Control de Recursos</span></a>
            </div>
          </nav>
          <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="nav-event" role="tabpanel" aria-labelledby="nav-201-tab">
              <%= render 'form_201' %>
            </div>
            <div class="tab-pane fade" id="nav-actions" role="tabpanel" aria-labelledby="nav-201-actions-tab">
              <%= render 'event_actions/index' %>
            </div>
            <div class="tab-pane fade" id="nav-victims" role="tabpanel" aria-labelledby="nav-207-tab">
              <%= render 'victims/index' %>
            </div>
            <div class="tab-pane fade" id="nav-resources" role="tabpanel" aria-labelledby="nav-211-tab">
              <%= render 'resource_requests/index' %>
            </div>
          </div>
          <!-- End of tab -->
        </div>
      </div>
    </div>
  </div>
</div>